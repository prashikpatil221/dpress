<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/eggBlue"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/btnstrategy"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/strategy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnHelp"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        android:onClick="goStrategy"
         />

    <ImageButton
        android:id="@+id/btnJornal"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/journal"
        android:onClick="goJornal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="379dp"
        android:layout_height="67dp"
        android:background="@color/skyBlue"
        android:gravity="center"
        android:text="Menu"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageButton
        android:id="@+id/btnHelp"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/help"
        android:onClick="goHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu" />

    <ImageButton
        android:id="@+id/btnMoti"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/motivation"
        android:onClick="goMoti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnDoc"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/doctor"
        android:onClick="goDoc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toEndOf="@+id/btnMoti"
        app:layout_constraintTop_toBottomOf="@+id/btnJornal"
        app:layout_constraintVertical_bias="0.935" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="131dp"
        android:layout_height="127dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/info"
        android:onClick="goInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnJornal"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>